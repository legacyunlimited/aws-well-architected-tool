{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "^/assessment$", "dest": "/index.html" },
    { "src": "^/assessment/.*$", "dest": "/index.html" },
    { "src": ".*", "dest": "/index.html" }
  ]
}

