{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AWSReadOnlyMinimal",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "iam:Get*",
        "iam:List*",
        "s3:ListAllMyBuckets",
        "s3:ListBucket",
        "ce:GetCostAndUsage"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowUploadToReportBucketOnly",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::kbcloudsolutions-reports/*"
    }
  ]
}

